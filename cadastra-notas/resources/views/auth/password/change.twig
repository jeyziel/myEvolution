{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Mudar Senha</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.change.password') }}" method="post" autocomplete="off">
                        <div class="form-group {{ errors.password_old ? 'has-error' : ''}}">
                            <label for="password_old">Senha atual</label>
                            <input type="password" name="password_old" id="password" class="form-control">
                            {% if errors.password_old %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.password ? 'has-error' : ''}}">
                            <label for="password">Nova senha</label>
                            <input type="password" name="password" id="password" class="form-control"> 
                            {% if errors.password %}
                                <span class="help-block">{{ errors.passoword | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Mudar Senha</button>
                        {{ csrf.field | raw}}
                    </form>
                </div>
            </div>
        </div>    
    </div>
{% endblock %}